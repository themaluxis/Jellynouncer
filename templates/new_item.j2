              {%- else -%}
                {%- set _ = rating_parts.append('**TVDb:** ' ~ item.tvdb.rating) -%}
              {%- endif -%}
            {%- endif -%}
            {{ (rating_parts | join(' ‚Ä¢ ')) | tojson }},
          "inline": false
        }
        {% endif %}
      ]

      {#
