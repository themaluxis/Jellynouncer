      #}
      "title": {% if item.item_type == 'Episode' -%}
        {{ ("üÜïüì∫ " ~ ((item.series_name | default('S√©rie inconnue')) ~ " " ~ "S" ~ ("%02d" % (item.season_number | default(0))) ~ "E" ~ ("%02d" % (item.episode_number | default(0))) | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'Series' -%}
