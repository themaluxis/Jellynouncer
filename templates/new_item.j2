      }

      {% if item.item_id %}
      ,"url": {{ (jellyfin_url ~ "/web/index.html#!/details?id=" ~ item.item_id) | tojson }}
      {% endif %}

      ,"timestamp": {{ timestamp | tojson }}
    }
  ]
}
