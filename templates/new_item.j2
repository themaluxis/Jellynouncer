      {%- elif item.item_type == 'MusicAlbum' -%}
        {{ ("üÜïüíø " ~ (item.name | default('Album inconnu') | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'MusicArtist' -%}
