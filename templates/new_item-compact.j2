{#
  New Item Compact Template for Jellynouncer
  ===========================================

  Minimal notification with only essential information.
  Designed for users who prefer brief notifications.

  Shows: Title, basic quality info, and primary rating only
  Omits: Detailed metadata, multiple ratings, genres
#}
{
  "embeds": [
    {
      "title": {% if item.item_type == 'Episode' -%}
        {{ ("üÜïüì∫ " ~ (item.name | default('Unknown Episode') | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'Series' -%}
        {{ ("üÜïüì∫ " ~ (item.name | default('Unknown Series') | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'Movie' -%}
        {{ ("üÜïüé¨ " ~ (item.name | default('Unknown Movie') | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'Season' -%}
        {{ ("üÜïüì∫ " ~ (item.series_name | default('Unknown Series')) ~ " - Season " ~ (item.season_number | default('?'))) | tojson }}
      {%- elif item.item_type == 'Audio' -%}
        {{ ("üÜïüéµ " ~ (item.name | default('Unknown Song') | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'MusicAlbum' -%}
        {{ ("üÜïüíø " ~ (item.name | default('Unknown Album') | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'MusicArtist' -%}
        {{ ("üÜïüé§ " ~ (item.name | default('Unknown Artist') | truncate(200, True, '...'))) | tojson }}
      {%- elif item.item_type == 'Photo' -%}
        {{ ("üÜïüì∑ " ~ (item.name | default('New Photo') | truncate(200, True, '...'))) | tojson }}
      {%- else -%}
        {{ ("üÜïüìÅ " ~ (item.name | default('Unknown ' ~ item.item_type) | truncate(200, True, '...'))) | tojson }}
      {%- endif %},

      {#
        Simplified Description
        ----------------------
        Just the title and basic identifying info
      #}
      "description": {% if item.item_type == 'Episode' -%}
        {{ ("**" ~ item.series_name ~ "** - " ~ item.name) | tojson }}
      {%- else -%}
        {{ ("**" ~ item.name ~ "**" ~
        (" (" ~ item.year ~ ")" if item.year else "")) | tojson }}
      {%- endif %},

      "color": {{ color }},

      {#
        Minimal Fields
        --------------
        Only show quality and primary rating
      #}
      "fields": [
        {% set fields_added = namespace(count=0) %}

        {% if item.video_height %}
          {% set fields_added.count = fields_added.count + 1 %}
        {
          "name": "üìê Quality",
          "value": {{ (item.video_height ~ "p" ~
            (" " ~ item.video_range if item.video_range and item.video_range != 'SDR' else "")) | tojson }},
          "inline": true
        }
        {% endif %}

        {#
          Show only IMDb rating for movies/TV, no rating for music
        #}
        {% if item.omdb and item.omdb.imdb_rating and item.omdb.imdb_rating != 'N/A' %}
          {% if fields_added.count > 0 %},{% endif %}
          {% set fields_added.count = fields_added.count + 1 %}
        {
          "name": "‚≠ê Rating",
          "value": {{ ("IMDb: " ~ item.omdb.imdb_rating ~ "/10") | tojson }},
          "inline": true
        }
        {% elif item.tvdb and item.tvdb.rating %}
          {% if fields_added.count > 0 %},{% endif %}
          {% set fields_added.count = fields_added.count + 1 %}
        {
          "name": "‚≠ê Rating",
          "value": {{ ("TVDb: " ~ item.tvdb.rating ~ "/10") | tojson }},
          "inline": true
        }
        {% endif %}
      ],

      "timestamp": {{ timestamp | tojson }}
    }
  ]
}